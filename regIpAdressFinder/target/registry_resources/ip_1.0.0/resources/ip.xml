<endpoint xmlns="http://ws.apache.org/ns/synapse" name="ip">
	<http uri-template="https://localhost" method="get">
		<suspendOnFailure>
			<progressionFactor>1.0</progressionFactor>
		</suspendOnFailure>
		<markForSuspension>
			<retriesBeforeSuspension>0</retriesBeforeSuspension>
			<retryDelay>0</retryDelay>
		</markForSuspension>
	</http>
</endpoint>